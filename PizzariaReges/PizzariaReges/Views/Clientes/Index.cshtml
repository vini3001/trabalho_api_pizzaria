@model IEnumerable<WebApiProducts.Models.Cliente>


@{
    ViewData["Title"] = "Clientes";
}
<h1>@ViewData["Title"]</h1>

<hr />

<p>
    <a type="button" class="btn btn-success" asp-action="Create">Adicionar Cliente</a>
</p>
<table class="table">
    <thead>
     <dl>
            <th>
                        @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
            <th></th>
    </dl>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a type="button" class="btn btn-primary" data-target="#ShowDetails" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>