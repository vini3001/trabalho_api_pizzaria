@model WebApiProducts.Models.Cliente;

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do cliente</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
    </dl>
</div>

<div style="padding: 6px">
    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a type="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>